/* pages/New/basic/basic.wxss */

page {
  background-color: #fff;
}

view {
  box-sizing: border-box;
}

.list-box {
  box-sizing: border-box;
  width: 100%;
  height: 85rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #e0e0e0;
  align-items: center;
  justify-content: space-between;
  display: flex;
}

.list-box-item {
  font-size: 30rpx;
  display: flex;
  align-items: center;
  width: 90%;
  height: 100%;
}

.list-left {
  /* width: 135rpx; */
  width: 236rpx;
}

.zxx_text_overflow {
  width: 75%;
  box-sizing: border-box;
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  overflow: hidden;
  color: #aaa;
  padding-right: 30rpx;
}

.list-image {
  width: 21rpx;
}
