<!-- 一对一 -->
<view wx:if='{{isGroup===0}}' class=' middle-m bg-fff flex aitems-center border-b-1 between padding-lr-30 border-t-1'>
  <view class='flex fon-36  c2b '>
    <image class='QiHao' mode='widthFix' src='../../images/qi_03.png'></image>
    <view>
      {{pagesData.courseName}}
      <view class=' fon-24 c8 margin-t-10 '>已有{{pagesData.buyNum}}人购买</view>
    </view>
  </view>
  <view class='bold purple'>¥ {{pagesData.price}}</view>
</view>
<!--  一对多  -->
<view wx:if='{{isGroup===1}}' class=' middle-m bg-fff flex aitems-center between padding-lr-30 border-t-1'>
  <view class='flex fon-36  c2b '>
    <image class='QiHao' mode='widthFix' src='../../images/tuan_06.png'></image>
    <view>
      {{pagesData.courseName}}
      <view class='bold bg-fff purple'>¥ {{pagesData.price}}</view>
    </view>
  </view>
  <view class='purplea purple fon-24 '>{{pagesData.groupNum}}人团</view>
</view>
<!--  导师信息  -->
<view class='flex aitems-center padding-lr-30 padding-tb-20 bg-fff teacher-box'>
  <view class='teacher-l'>
    <image class='touXiang margin-r-20' src='{{imageT}}'></image>
    <view class='flex1'>
      <view class='fon-26 margin-b-10 flex aitems-center '>
        {{userNameT}}
        <image wx:if='{{isVip}}' class='HuangGuan margin-l-10' mode='widthFix' src='../../images/guan_03.png'></image>
        <!--  星星  -->
        <view class='score'>
          <view class='score-all'>
            <image wx:for="{{5}}" wx:key='{{index}}' class='score-list' mode='widthFix' src='../../images/hui_07.png'></image>
          </view>
          <view class='score-score'>
            <view class='score-list' wx:for="{{5}}" wx:key='{{index}}'>
              <!--  整星  -->
              <image wx:if="{{listq - 0.5 > index ? index <= listq : index < listq - 1}}" class='score-img' src='../../images/xian_05.png'></image>
              <!--  半星  -->
              <image wx:if="{{listq - 0.5 > index ? false : index < listq }}" class='score-image' src='../../images/BanXIn_03.png'></image>
            </view>
          </view>
        </view>
      </view>
      <view class='fon-24 c8'>
        <black wx:for='{{userList}}' wx:key='{{index}}'>
          <text wx:if='{{index!=0}}'>/</text>{{item}}
        </black>
      </view>
    </view>
  </view>
  <image mode='widthFix' class='teacher-chat' src='../../images/DuiHua_06.png'></image>
</view>
<!--  拼团详情  -->
<view class='margin-t-20 border-t-1 border-b-1'>
  <view class='padding-tb-20 border-b-1 padding-lr-30 bg-fff'>
    <view class='fon-30 padding-l-20 border-l-2 c2b'>拼团详情</view>
  </view>
  <view wx:for='{{pagesData.buyInfo}}' wx:key='{{index}}' class='flex fon-30 c2b bg-fff   padding-25 aitems-center between border-b-1'>
    <view class='flex aitems-center'>
      <image class='orderimg image-radius' src='{{item.image}}'></image>
      {{item.name}}
      <view wx:if='{{isGroup===1&&index===0}}' class='Tuan border fon-24 purple'>团长</view>
    </view>
    <view class='flex aitens-center'>
      <image class='phone' mode='widthFix' src='../../images/phone_06.png'></image>
      {{item.phone}}
    </view>
  </view>
  <view class='padding-25 fon-24 bg-fff'>
    <block wx:if='{{isGroup===0}}'>
      <view class='margin-b-20 '>订单号：{{pagesData.orderCode}}</view>
      <view class='margin-b-20 '>下单时间：{{pagesData.orderTime}}</view>
      <view class='margin-b-20 '>支付时间：{{pagesData.orderPayment}}</view>
    </block>
    <block wx:if='{{isGroup===1}} '>
      <view class='margin-b-20 '>团编号：{{pagesData.groupCode}}</view>
      <view class='margin-b-20 '>开团时间：{{pagesData.groupStartTime}}</view>
      <view class='margin-b-20 '>结束时间：{{pagesData.groupEndTime}}</view>
    </block>
    <view class='margin-b-20 '>上课时间段：{{pagesData.courseInterval}}</view>
    <view class='margin-b-20 '>课程时长：{{pagesData.courseTime}}小时</view>
    <view class='margin-b-20 '>上课时间：{{pagesData.courseDate}}</view>
  </view>
</view>

<view class='border-t-1 border-b-1 margin-t-20 bg-fff padding-b-20'>
  <view class='padding-tb-20 padding-lr-30 bg-fff'>
    <view class='fon-30 padding-l-20 border-l-2 c2b'>上课地址及外交联系方式</view>
  </view>
  <view class='padding-50 margin-t-20 bg-fff flex aitems-center fon-26 '>
    <image mode='widthFix' class='address' src='../../images/adddress_14.png'></image>
    {{pagesData.address}}
  </view>
  <view class='padding-50 margin-t-20 bg-fff flex aitems-center fon-26 '>
    <image mode='widthFix' class='address' src='../../images/adddress_14.png'></image>
    {{pagesData.address}}
  </view>
</view>
<view class='flex center btn-fa'>
  <view class='btn flex center fon-32 bg-fff purple padding-tb-20 border btn-radius'>删除订单</view>
</view>