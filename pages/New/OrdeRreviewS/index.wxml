<view class='wrapper'>
  <view wx:for='{{pagesData}}' wx:key='{{index}}' class='list margin-t-20'>
    <view class='flex aitems-center padding-lr-30 padding-tb-20 bg-fff teacher-box'>
      <view class='teacher-l'>
        <image class='touXiang margin-r-20 touxiang-image' src='{{item.image}}'></image>
        <view class='flex1'>
          <view class='fon-26 margin-b-10 flex aitems-center '>
            {{item.userName}}
            <image class='HuangGuan margin-l-10' mode='widthFix' src='{{item.country}}'></image>
            <image wx:if='{{item.isVip}}' class='HuangGuan margin-l-10' mode='widthFix' src='../../images/guan_03.png'></image>
            <!--  星星  -->
            <view class='score'>
              <view class='score-all'>
                <image wx:for="{{5}}" wx:key='{{index}}' class='score-list' mode='widthFix' src='../../images/hui_07.png'></image>
              </view>
              <view class='score-score'>
                <view class='score-list' wx:for="{{5}}" wx:for-item='value' wx:for-index='key' wx:key='{{index}}'>
                  <!--  整星  -->
                  <image wx:if="{{item.listq - 0.5 > key ? key <= item.listq : key < item.listq - 1}}" class='score-img' src='../../images/xian_05.png'></image>
                  <!--  半星  -->
                  <image wx:if="{{item.listq - 0.5 > key ? false : key < item.listq }}" class='score-image' src='../../images/BanXIn_03.png'></image>
                </view>
              </view>
            </view>
          </view>
          <view class='fon-24 c8'>
            <black wx:for='{{item.userList}}' wx:key='{{index}}'>
              <text wx:if='{{index!=0}}'>/</text>{{item}}
            </black>
          </view>
        </view>
      </view>
    </view>
    <view class='padding-tb-10 flex fon-24 border-t-1 border-b-1 padding-lr-30  aitems-center bg-fff between'>
      <view class='fon-26 c8'>
        {{item.status===0?"未点评":"已点评"}}
      </view>
      <view class='list-footer'>
        <view wx:if='{{item.status===0}}' bindtap='releaseRemark' data-index='{{index}}' class='border AnNiu white purple-bg'>立即点评</view>
        <view wx:if='{{item.status===1}}' bindtap='bindDelete' data-index='{{index}}' class='border AnNiu white purple-bg'>删除点评</view>
      </view>
    </view>
  </view>
</view>