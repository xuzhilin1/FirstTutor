<view class='wrapper'>
  <view wx:for='{{teaList}}' wx:key='{{index}}' class='list margin-t-20'>
    <view class='flex aitems-center padding-lr-30 padding-tb-20 bg-fff teacher-box'>
      <view class='teacher-l'>
        <image class='touXiang margin-r-20 touxiang-image' src='{{item.TeaAvaUrl}}'></image>
        <view class='flex1'>
          <view class='fon-26 margin-b-10 flex aitems-center '>
            {{item.TeaNickName}}
            <image wx:if='{{item.TeaAddV==1}}' class='HuangGuan margin-l-10' mode='widthFix' src='../../images/guan_03.png'></image>
            <!--  星星  -->
            <view class='score'>
              <view class='score-all'>
                <image wx:for="{{5}}" wx:key='{{index}}' class='score-list' mode='widthFix' src='../../images/hui_07.png'></image>
              </view>
              <view class='score-score'>
                <view class='score-list' wx:for="{{5}}" wx:for-item='value' wx:for-index='key' wx:key='{{index}}'>
                  <!--  整星  -->
                  <image wx:if="{{item.RewScore - 0.5 > key ? key <= item.RewScore : key < item.RewScore - 1}}" class='score-img' src='../../images/xian_05.png'></image>
                  <!--  半星  -->
                  <image wx:if="{{item.RewScore - 0.5 > key ? false : key < item.RewScore }}" class='score-image' src='../../images/BanXIn_03.png'></image>
                </view>
              </view>
            </view>
          </view>
          <view class='fon-24 c8'>
            {{item.TeaAbstract}}
          </view>
        </view>
      </view>
    </view>
    <view class='padding-tb-10 flex fon-24 border-t-1 border-b-1 padding-lr-30  aitems-center bg-fff between'>
      <view class='fon-26 c8'>
        {{item.RewId>0?"已点评":"未点评"}}
      </view>
      <view class='list-footer'>
        <view wx:if='{{item.RewId<=0}}' bindtap='releaseRemark' data-index='{{index}}' class='border AnNiu white purple-bg'>立即点评</view>
        <view wx:if='{{item.RewId>0}}' bindtap='bindDelete' data-index='{{index}}' class='border AnNiu white purple-bg'>删除点评</view>
      </view>
    </view>
  </view>
</view>
<view wx:if='{{teaList.length<=0}}' class='noData'>
  暂无数据
</view>