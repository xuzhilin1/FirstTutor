/* pages/static/templateMessage/templateMessage.wxss */

.header {
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  padding: 30rpx;
}

.margin-b {
  margin-bottom: -30rpx;
}

.title {
  font-weight: bold;
  padding: 30rpx;
}

.item {
  background: #fff;
  margin-top: 20rpx;
}

.item-context {
  padding: 0 30rpx 30rpx 30rpx;
}

.item .item-context:nth-child(2) {
  padding-top: 30rpx;
}

.item-context::after {
  content: '';
  display: block;
  clear: both;
}

.sf-box {
  width: 30rpx;
  height: 24rpx;
  box-sizing: border-box;
  display: inline-block;
}

.sf-box::after {
  content: '';
  display: block;
  clear: both;
}

.sf {
  transform: scale(0.5, 0.5);
  width: 30rpx;
  height: 24rpx;
  line-height: 0rpx;
  text-align: left;
  box-sizing: border-box;
  margin-left: -6rpx;
  margin-top: 6rpx;
  float: left;
}

.float {
  float: left;
  height: 24rpx;
}

.form {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 63rpx;
  box-sizing: border-box;
  position: relative;
  top: 0;
  left: 0;
  padding: 0 30rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.input {
  width: 70%;
  height: 63rpx;
  border: 1px solid #c2c2c2;
  padding-left: 10rpx;
  font-size: 24rpx;
}

.submit {
  height: 63rpx;
  width: 125rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 24rpx;
  background: #7c99d0;
  border-radius: 0;
  margin: 0;
  padding: 0;
}

.submit::after {
  border: none;
  border-radius: 0;
}

.two {
  display: flex;
  padding: 30rpx;
  justify-content: center;
  font-size: 24rpx;
  align-items: center;
}

.two-image {
  width: 40rpx;
  margin-top: 26rpx;
  margin-left: 20rpx;
}

.two-box {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.two-bottom {
  display: flex;
  align-items: center;
}

.image-right {
  width: 50rpx;
  margin: 0 20rpx;
}

.image-left {
  transform: rotateZ(180deg);
}

.two-top {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 70rpx;
}

.image-point {
  width: 50rpx;
  margin-bottom: 20rpx;
}

.image-point-min {
  width: 30rpx;
}

.two-left-top {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.min-box {
  display: flex;
  align-items: center;
}
