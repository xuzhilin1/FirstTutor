/* pages/Home/teachersInformation/index.wxss */

.wrapper-scroll {
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
}

.zonga {
  position: relative;
  min-width: 255rpx;
  margin-top: 30rpx;
  margin-left: 15rpx;
}

.img-m {
  height: 300rpx;
  width: 100%;
  display: block;
  border-radius: 10rpx;
}

/*  */

.bg-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.ZuiShang {
  height: 200rpx;
  position: relative;
}

.header-box {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.touxiang-image-t {
  border: 6rpx solid #96add9;
}

.phone {
  width: 26rpx;
  margin-right: 10rpx;
}

.padding-25 {
  padding: 25rpx 30rpx 25rpx 30rpx;
}

.address {
  width: 26rpx;
  margin-right: 25rpx;
}

page {
  height: 100%;
}

.scr {
  position: relative;
  height: 100%;
}

.touxiang {
  width: 98rpx;
  height: 98rpx;
  border-radius: 50%;
  margin-left: 14rpx;
  margin-right: 20rpx;
}

.comment-info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}

.comment {
  box-sizing: border-box;
  width: 100%;
  padding: 10rpx 30rpx 0 130rpx;
}

/*滚动条不显示 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.navbar {
  flex: none;
  display: flex;
  padding-left: 36rpx;
  -webkit-flex: none;
  display: -webkit-flex;
  background: #fff;
  font-size: 30rpx;
  position: relative;
}

.navbar .item {
  width: 33.3%;
  position: relative;
  text-align: center;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #707070;
  margin-right: 50rpx;
}

.QiHao {
  width: 42rpx;
  margin-right: 14rpx;
}

.navbar .item.active {
  color: #7c99d0;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: -1rpx;
  width: 60%;
  left: 20%;
  right: 0;
  height: 4rpx;
  background: #7c99d0;
}

.sepa {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
}

.video {
  width: 100%;
  height: 400rpx;
  box-sizing: border-box;
}

.zizhi-box {
  padding: 30rpx 0;
}

.img-ziZhi {
  width: 450rpx;
  display: block;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.footer {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}

.footer1 {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  position: fixed;
  left: 0;
  bottom: 0;
}

/*  评分  */

.score {
  position: relative;
  display: flex;
}

.score-all {
  display: flex;
}

.score-score {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}

.score-list {
  width: 26rpx;
  height: 26rpx;
  margin-left: 6rpx;
  display: flex;
}

.score-img {
  width: 100%;
  height: 100%;
}

.score-image {
  height: 100%;
  width: 50%;
}

.teacher-box {
  display: flex;
  justify-content: space-between;
}

.teacher-l {
  display: flex;
  align-items: center;
}

.teacher-chat {
  width: 40rpx;
}

/*  评分 end  */

.catImage {
  width: 50rpx;
}

.chat-tea {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
}

.chat-tea image {
  margin-bottom: 10rpx;
}
