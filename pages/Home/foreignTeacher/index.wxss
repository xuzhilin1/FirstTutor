/* pages/Home/foreignTeacher/index.wxss */

page {
  background-color: #fff;
}

.search-box {
  width: 100%;
  padding: 20rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}

.search {
  box-sizing: border-box;
  width: 100%;
  border-radius: 20px;
  height: 50rpx;
  background-color: #f7f7f7;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.search input {
  height: 100%;
  width: 100%;
}

.img-top {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.xia {
  width: 24rpx;
}

.zonga {
  position: relative;
  min-width: 255rpx;
  margin-top: 30rpx;
  margin-left: 15rpx;
}

.img-m {
  height: 300rpx;
  width: 100%;
  display: block;
  border-radius: 10rpx;
}
/*  评分  */

.score {
  position: relative;
  display: flex;
}

.score-all {
  display: flex;
}

.score-score {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}

.score-list {
  width: 26rpx;
  height: 26rpx;
  margin-left: 6rpx;
  display: flex;
}

.score-img {
  width: 100%;
  height: 100%;
}

.score-image {
  height: 100%;
  width: 50%;
}

.teacher-box {
  display: flex;
  justify-content: space-between;
}

.teacher-l {
  display: flex;
  align-items: center;
}

.teacher-chat {
  width: 40rpx;
}

/*  评分 end  */
