.wrapper {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 20rpx;
  bottom: 50rpx;
  background: #7c99d0;
  overflow: hidden;
  box-sizing: border-box;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.box::after {
  border: none;
  border-radius: 0;
}

.box {
  border-radius: 0;
  background: transparent;
  color: #fff;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  line-height: 30rpx;
}

