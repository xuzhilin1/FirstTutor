/*结构  */

.flex {
  display: flex;
  display: -webkit-flex;
}

/*超出影藏  */

.XianZhi {
  word-wrap: break-word;
  overflow: hidden;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.XianZhi1 {
  word-wrap: break-word;
  overflow: hidden;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.flex1 {
  flex: 1;
  -webkit-flex: 1;
}

.between {
  justify-content: space-between;
  -webkit-justify-content: space-between;
}

.center {
  justify-content: center;
  -webkit-justify-content: center;
}

.j-right {
